        figure 
            figcaption 
                p.img
                    img(src=oneCard.img, alt=oneCard.alt)
                p.tour #{oneCard.tour}
                    p.price
                        span #{oneCard.price}
                        span.currency #{oneCard.currency}
                p.description #{oneCard.description}

