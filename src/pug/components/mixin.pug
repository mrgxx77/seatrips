        figure 
            figcaption 
                .row
                    p.img.col-2
                        img(src=oneCard.img, alt=oneCard.alt)
                    .col-10
                        .row
                            p.type #{oneCard.type}
                                span.currency #{oneCard.currency}
                                span.size.row #{oneCard.Size}
                ul.description.row
                    for item in oneCard.description 
                        li #{item}
                .download
                    img(src=oneCard.svg, alt=oneCard.alt)
                    a(href="#").a #{oneCard.download}
