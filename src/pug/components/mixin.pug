mixin cards(oneCard)
    .card.col-12.col-xl-3.col-md-6
        figure 
            figcaption 
                p.img.row
                    img(src=oneCard.img, alt=oneCard.alt)
                .text
                    p.tour #{oneCard.tour}
                    ul.description
                        for item in oneCard.description 
                            li #{item}
                    .row
                        p.price.col
                            span #{oneCard.price}
                            span.currency #{oneCard.currency}
                        .order.col
                            a(href="#").a #{oneCard.order}

